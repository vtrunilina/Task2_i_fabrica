<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="343.0" prefWidth="609.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo8.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Canvas fx:id="canvas" height="224.0" onMouseClicked="#onMouseEntered" width="279.0" />
   <TextField fx:id="nameShape" text="Введите название фигуры" />

    <Label fx:id="welcomeText" />
   <ColorPicker fx:id="colorPicer" onAction="#changeColor" />
   <Button mnemonicParsing="false" onAction="#onHelloButtonClickPoly" text="Угол" />
   <Button mnemonicParsing="false" onAction="#onHelloButtonClickOval" text="Овал" />
    <Button onAction="#onHelloButtonClickRec" text="Квадрат" />
</VBox>
